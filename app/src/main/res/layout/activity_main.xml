        android:id="@+id/btn4"
        android:layout_marginStart="8dp"
        android:onClick="checkButton"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn5"
        android:layout_marginStart="8dp"
        android:onClick="checkButton"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn6"
        android:layout_marginStart="8dp"
        android:onClick="checkButton"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn7"
        android:layout_marginStart="8dp"
        android:onClick="checkButton"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn8"
        android:layout_marginStart="8dp"
        android:onClick="checkButton"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn9"
        android:layout_marginStart="8dp"
        android:onClick="checkButton"
        />

</GridLayout>

</androidx.appcompat.widget.LinearLayoutCompat>